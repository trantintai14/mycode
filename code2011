<script>
/* fake hack animation + credit fade-in + pulse */
const screen = document.getElementById('screen');
const overlay = document.getElementById('overlay');
const credit = document.getElementById('credit');

let cols = Math.max(40, Math.floor(window.innerWidth / 8));
function binaryLine() {
  let s='';
  for (let i=0;i<cols;i++) s += Math.random()<0.5? '0':'1';
  return s;
}

/* main run: duration ms, delay per tick ms */
async function run(duration = 7000, delay = 25) {
  const start = performance.now();
  while (performance.now() - start < duration) {
    const lines = 3 + Math.floor(Math.random()*4);
    for (let i=0;i<lines;i++) {
      screen.textContent += binaryLine() + '\n';
    }
    // gi·ªØ t·ªëi ƒëa ~200 d√≤ng ƒë·ªÉ tr√°nh lag
    const parts = screen.textContent.split('\n');
    if (parts.length > 250) screen.textContent = parts.slice(-200).join('\n') + '\n';
    window.scrollTo(0, document.body.scrollHeight);
    await new Promise(r => setTimeout(r, delay));
  }

  // fake logs r·ªìi hi·ªán overlay
  await new Promise(r => setTimeout(r, 350));
  screen.textContent += "\nSYSTEM: unauthorized access detected...\n";
  await new Promise(r => setTimeout(r, 500));
  screen.textContent += "TRACE: locating endpoints... done\n";
  await new Promise(r => setTimeout(r, 550));
  screen.textContent += "DUMP: memory blocks... done\n";
  await new Promise(r => setTimeout(r, 700));

  overlay.style.display = 'flex';

  // show credit: m·ªù d·∫ßn hi·ªán ra r·ªìi b·∫≠t pulse nh·∫π
  credit.style.opacity = '1';
  // delay 600ms r·ªìi b·∫≠t pulse
  setTimeout(()=> credit.classList.add('pulse'), 600);
}

/* auto start khi trang m·ªü */
run(7000, 25);

/* nh·ªè: n·∫øu ng∆∞·ªùi d√πng b·∫•m/scroll, v·∫´n ƒë·∫£m b·∫£o overlay hi·ªÉn ƒë√∫ng */
